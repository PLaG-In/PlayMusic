<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:weightSum="1"
    android:background="@drawable/bg_skull"
    tools:context="com.plag_in.playmusic.MainActivity">

    <TextView
        android:id="@+id/textView"
        android:layout_width="match_parent"
        android:layout_height="22dp"
        android:text="@string/music_theme_str"
        android:textAlignment="center"
        tools:textAlignment="center" />

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.97"
        android:contentDescription="@string/music_theme_str"
        android:background="@drawable/img_song" />

    <SeekBar
        android:id="@+id/seekBar"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        style="@android:style/Widget.SeekBar" />

    <LinearLayout android:layout_height="wrap_content"
        android:layout_width="match_parent">

        <ImageButton
            android:id="@+id/RewindLeftButton"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:contentDescription="@string/rewind_str"
            app:srcCompat="@drawable/bt_left_rewind"
            android:layout_weight="0.01"/>

        <ImageButton
            android:id="@+id/ButtonPlayStop"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:layout_marginStart="@dimen/margin_left"
            android:layout_marginLeft="@dimen/margin_left"
            android:contentDescription="@string/play_str"
            app:srcCompat="@drawable/bt_play"
            android:layout_weight="0.01" />

        <ImageButton
            android:id="@+id/RewindRightButton"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:layout_marginStart="@dimen/margin_left"
            android:layout_marginLeft="@dimen/margin_left"
            android:contentDescription="@string/rewind_str"
            app:srcCompat="@drawable/bt_right_rewind"
            android:layout_weight="0.01" />

        <ImageButton
            android:id="@+id/StopButton"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:layout_marginStart="@dimen/margin_left"
            android:layout_marginLeft="@dimen/margin_left"
            android:contentDescription="@string/stop_str"
            app:srcCompat="@drawable/bt_stop_song"
            android:layout_weight="0.01" />

        <ImageButton
            android:id="@+id/PlaylistButton"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:layout_marginStart="@dimen/margin_left"
            android:layout_marginLeft="@dimen/margin_left"
            android:contentDescription="@string/playlist_str"
            app:srcCompat="@drawable/bt_list"
            android:layout_weight="0.01"/>

    </LinearLayout>

</LinearLayout>